<h1>Welcome to Tech Talent Store!</h1>
<p>Give us your money!</p>

<div>
	<p>
		<input type="checkbox" name="checkbox" id="price_lowhigh"> <label for="price_lowhigh">Price Low to High</label>
	</p>
	<p>
		<input type="checkbox" name="checkbox" id="price_highlow"> <label for="price_highlow">Price High to Low</label>
	</p>
	<p>
		<input type="checkbox" name="checkbox" id="by_rating"> <label for="by_rating">Rating</label>
	</p>
</div>

<div class="row">
	<div id="all_items">
		<%= render 'allitems' %>
	</div>
	<div id="low_to_high" class="cant-see-me">
		<%= render 'price_lowhigh' %>
	</div>
	<div id="high_to_low" class="cant-see-me">
		<%= render 'price_highlow' %>
	</div>
	<div id="rating_div" class="cant-see-me">
		<%= render 'rating' %>
	</div>
</div>


<script>
	$(document).ready(function(){
		$('#price_lowhigh').click(function(){
			$('#all_items').toggleClass('cant-see-me');
			$('#low_to_high').toggleClass('cant-see-me');
			if($('#price_highlow').is(':checked')){
    		$('#price_highlow').attr('checked', false);
    		$('#all_items').addClass('cant-see-me');
    		$('#high_to_low').addClass('cant-see-me');
    	if($('#by_rating').is(':checked')){
				$('#by_rating').attr('checked', false);
				$('#rating_div').addClass('cant-see-me');
				$('#all_items').addClass('cant-see-me');
			}
    	}
		});
		$('#price_highlow').click(function(){
			$('#all_items').toggleClass('cant-see-me');
			$('#high_to_low').toggleClass('cant-see-me');
			if($('#price_lowhigh').is(':checked')){
				$('#price_lowhigh').attr('checked', false);
				$('#all_items').addClass('cant-see-me');
				$('#low_to_high').addClass('cant-see-me');
			}
			if($('#by_rating').is(':checked')){
				$('#by_rating').attr('checked', false);
				$('#rating_div').addClass('cant-see-me');
				$('#all_items').addClass('cant-see-me');
			}
		});
		$('#by_rating').click(function(){
			$('#all_items').toggleClass('cant-see-me');
			$('#rating_div').toggleClass('cant-see-me');
			if($('#price_highlow').is(':checked')){
    		$('#price_highlow').attr('checked', false);
    		$('#all_items').addClass('cant-see-me');
    		$('#high_to_low').addClass('cant-see-me');
    	}
			if($('#price_lowhigh').is(':checked')){
				$('#price_lowhigh').attr('checked', false);
				$('#all_items').addClass('cant-see-me');
				$('#low_to_high').addClass('cant-see-me');
			}
		});
	});
</script>